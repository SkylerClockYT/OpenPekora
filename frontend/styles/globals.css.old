:root{
	--primary-color: #00a2ff;
	--primary-color-hover: #3ab8ff;
	--secondary-color: #0074bd;
	--success-color: #02b757;
	--success-color-hover: #3fc679;
	--bad-color: #e27676;
	--text-color-primary: #191919;
	--text-color-secondary: #b8b8b8;
	--text-color-tertiary: #757575;
	--text-color-quaternary: #fff;
	--white-color: #fff;
	--text-color-secondary-dark: #5a5a5a;

	--background-color: #e3e3e3;
	--background-color-legacy: #fff;

	--success-gradient: linear-gradient(0deg, rgba(0,113,0,1) 0%, rgba(64,193,64,1) 100%);
	--success-gradient-hover: linear-gradient(0deg, rgba(71,232,71,1) 0%, rgba(71,232,71,1) 100%);
	--success-border: #007001;
	--continue-gradient: linear-gradient(0deg, rgba(8,79,192,1) 0%, rgba(5,103,234,1) 100%);
	--continue-gradient-hover: linear-gradient(0deg, rgba(2,73,198,1) 0%, rgba(7,147,253,1) 100%);
	--continue-border: #0852b7;
	--cancel-gradient: linear-gradient(0deg, rgba(69,69,69,1) 0%, rgba(140,140,140,1) 100%);
	--cancel-gradient-hover: grey;
	--cancel-border: #565656;
}

.bg-white-2 {
	--bs-bg-opacity: 1;
	background-color: rgba(var(--background-color), var(--bs-bg-opacity))!important;
}

html,
body {
	padding: 0;
	margin: 0;
	font-family: 'Source Sans Pro', Arial, Helvetica, sans-serif;
	font-size: 14px;
	min-height: 100vh;
}
div#__next > div > div.container {
	min-height: 100vh;
}
html > body {
	font-family: 'Source Sans Pro', serif;
}

a {
	color: inherit;
	text-decoration: none;
}

* {
	box-sizing: border-box;
}

.link2018 {
	text-decoration: none!important;
	color: var(--primary-color)!important;
}
.link2018:hover {
	text-decoration: underline!important;
	color: var(--primary-color)!important;
}

.link2019 {
	color: var(--text-color-primary)!important;
}
.link2019:hover {
	color: var(--primary-color)!important;
}

.section-content {
	background-color: var(--white-color);
	/*color: var(--text-color-secondary);*/
	box-shadow: 0 1px 4px 0 rgba(25,25,25,0.3);
	padding: 15px;
	text-align: center;
	font-size: 16px;
	font-weight: 400;
	line-height: 1.4em;
	margin: 0 0 18px;
}

.section-content-off {
	background-color: var(--text-color-secondary);
	color: var(--text-color-tertiary);
	padding: 15px;
	text-align: center;
	font-size: 16px;
	font-weight: 400;
	line-height: 1.4em;
}

.text-danger-new {
	padding: 5px 10px;
	border: 1px solid #C00;
	background-color: #FAE5E5;
	color: var(--text-color-primary);
	line-height: 1.428;
	font-size: 14px;
	display: inline;
}

input.form-control::placeholder {
	color: 'var(--white-color)';
}

.divider-right {
	border-right: 1px solid #c3c3c3;
}

.divider-top {
	border-top: 1px solid #c3c3c3;
}
.divider-bottom {
	border-bottom: 1px solid #c3c3c3;
}
.divider-top-thick {
	border-top: 2px solid #c3c3c3;
}
.divider-light {
	border-color: #ebebeb;
}
html a,
p > a,
a,
/*a:active,*/
.fake-link {
	color: #0055b3; /*Orignial: #0055b3;*/
	text-decoration: none !important;
	cursor: pointer;
}

a.nav-link:focus, a.nav-link:hover {
	color: white;
}

.truncate {
	white-space: nowrap;
	overflow-x: hidden;
	text-overflow: ellipsis;
}

.flex {
	display: flex;
	flex-wrap: wrap;
}

a.normal {
	color: #000;
}
a.normal:hover {
	color: '#0055b3';
}

html {
	width: 100%;
	overflow-x: hidden;
}

html,
body,
p,
h1,
h2,
h3,
h4,
h5,
h6,
a,
span,
li,
ul,
ol,
div {
	line-height: 1.4em;
	color: var(--text-color-primary);
}

html div.container {
	max-width: 970px;
	/*max-width: 1154px;*/
}

.cursor-pointer {
	cursor: pointer;
}

.float-left {
	float: left;
}

.float-right {
	float: right;
}

.br-none {
	border-radius: 0!important;
}

.alert-pjx {
	-webkit-transition: top .5s ease;
	transition: top .5s ease;
	position: fixed;
	left: 0;
	margin: 0 auto;
	font-size: 16px;
	line-height: 1.4em;
	top: calc(-1 * (1.4em + 30px)); /* padding + size of text */
	width: 100%;
	max-width: 970px;
	right: 0;
	z-index: 9999;
}

.alert-text {
	font-size: 16px;
	font-weight: 400;
	line-height: 1.4em;
	/*width: calc(100% - 30px);*/
	width: 100%;
	display: inline-block;
	color: inherit!important;
}

.alert-pjx.on {
	top: 40px!important;
}

.alert-warning {
	background-color: #d86868;
	border: 0;
	text-align: center;
	color: var(--white-color);
	padding: 15px;
}

.alert-success {
	background-color: #02b757;
	border: 0;
	text-align: center;
	color: var(--white-color);
	padding: 15px;
	height: 48px;
}

.alert-loading {
	background-color: var(--text-color-secondary);
	border: 0;
	text-align: center;
	color: #f2f2f2;
	padding: 15px;
	height: 48px;
}

.spinner {
	background-position: 50%;
	background-repeat: no-repeat;
	background-color: transparent;
	display: inline-block;
	width: 100%;
	background-size: auto 24px;
	height: 24px;
	margin: 6px auto;
	background-image: url(/img/loading.gif);
}

#__next {
	min-height: 100vh;
}